<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tommyhasselman.termsandconditions">

    <application
        android:name="com.tommyhasselman.termsandconditions.Controller"
        android:allowBackup="true"
        android:icon="@mipmap/icon2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.tommyhasselman.termsandconditions.LossActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tommyhasselman.termsandconditions.VarsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeDialog" />
        <activity
            android:name="com.tommyhasselman.termsandconditions.BoxDialog"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeDialog" />
        <activity
            android:name="com.tommyhasselman.termsandconditions.OrderDialog"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeDialog" />
        <activity
            android:name="com.tommyhasselman.termsandconditions.OptionsMenu"
            android:screenOrientation="portrait"
            android:label="Options"
            android:theme="@style/ThemeDialog" />
        <activity android:name="com.tommyhasselman.termsandconditions.LobbyActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tommyhasselman.termsandconditions.ConveyorActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tommyhasselman.termsandconditions.CinematicActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tommyhasselman.termsandconditions.MainMenu"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>